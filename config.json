{
  "source": ["./tokens/light/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "./css/",
      "files": [{
        "destination": "variables.scss",
        "format": "scss/variables",
        "options": {
          "outputReferences": true
        }
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "./js/",
      "files": [{
        "destination": "variables.js",
        "format": "javascript/es6",
        "options": {
          "outputReferences": true
        }
      }]
    }
  }
}